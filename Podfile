platform :ios, '8.0'
use_frameworks!

target '<Your Target Name>' do
  # 函数响应式框架
  # https://github.com/ReactiveX/RxSwift
  # RxSwift -start
  pod 'RxSwift',    '~> 3.0'
  pod 'RxCocoa',    '~> 3.0'
  # RxSwift -end

  # Crash日志收集
  # Fabric -start
  # https://fabric.io
  pod 'Fabric'
  # https://get.fabric.io/
  pod 'Crashlytics'
  # Fabric -end

  # Swift的一些实用扩展
  # https://github.com/omaralbeik/SwifterSwift
  pod 'SwifterSwift'

  # 网络请求框架（可以考虑下这个：https://github.com/johnlui/Pitaya 但是它目前还不支持pod）
  # https://github.com/Alamofire/Alamofire
  pod 'Alamofire', '~> 4.0'

  # 下载缓存网络图片
  # https://github.com/onevcat/Kingfisher
  pod 'Kingfisher', '~> 3.2.2'

  # 强引用的方式使用资源文件（避免使用泛字符串类api导致写错）
  # https://github.com/mac-cain13/R.swift
  pod 'R.swift'

  # R.swift的依赖
  # https://github.com/mac-cain13/R.swift.Library
  pod 'R.swift.Library'

  # JSON处理
  # https://github.com/alibaba/handyjson
  pod 'HandyJSON', '~> 1.3.0'

  # JSON处理
  # https://github.com/SwiftyJSON/SwiftyJSON
  # pod 'SwiftyJSON'

  # 一个优美的图片选择器
  # https://github.com/hyperoslo/ImagePicker
  pod 'ImagePicker'

  # Swift的KVO
  # https://github.com/slazyk/Observable-Swift
  pod 'Observable-Swift', '~> 0.6.0'

  # Swift Style 检查
  # https://github.com/realm/SwiftLint
  pod 'SwiftLint'

  # 简单生动的文件管理
  # https://github.com/nvzqz/FileKit
  pod 'FileKit', '~> 4.0.0'

  # 富文本操作（暂时不支持pod）
  # https://github.com/malcommac/SwiftRichString

  # 在手机中显示一个迷你控制台
  # https://github.com/Cosmo/TinyConsole
  # pod 'TinyConsole'

  # 样式比较优美的segmented
  # https://github.com/tapptitude/TTSegmentedControl
  # pod 'TTSegmentedControl'

  # 优雅的Timer（暂时不支持pod）
  # https://github.com/100mango/SwiftTimer

  # Keychain助手
  # https://github.com/marketplacer/keychain-swift
  pod 'KeychainSwift', '~> 7.0.0'

  # 它会把你输入的字符转成对应的Emoji
  # https://github.com/fastred/EmojiTextView
  # pod "EmojiTextView", "0.0.1"

  # 在屏幕上显示每一个像素
  # https://github.com/maxsokolov/Cribble
  pod 'Cribble'

  # 比较屌的日历
  # https://github.com/patchthecode/JTAppleCalendar
  pod 'JTAppleCalendar', '~> 6.0'

  # 日志记录（暂时不支持pod）
  # https://github.com/emaloney/CleanroomLogger

  # 切换主题方案
  # https://github.com/jiecao-fm/SwiftTheme
  pod 'SwiftTheme', '~> 0.3'

  # 类微信、微博的主流alert、sheet样式
  # https://github.com/Jiar/JRAlertController
  pod 'JRAlertController', '~> 1.0.0'

  # 可定制的Alert
  # https://github.com/Codeido/PMAlertController
  pod 'PMAlertController'

  # 轻量级color kit
  # https://github.com/boycechang/BCColor
  pod 'BCColor'

  # Socket库
  # https://github.com/swiftsocket/SwiftSocket
  pod 'SwiftSocket'

  # markdown编辑器
  # https://github.com/indragiek/MarkdownTextView
  pod "MarkdownTextView"
  
  # 动效库
  # https://github.com/storehouse/Advance
  pod 'Advance', '~> 0.9'
  
  # 类似 Instagram 图片滤镜库及示例
  # https://github.com/makomori/Sharaku
  pod "Sharaku"
  
  ##### 以下为OC部分 #####
  
  # 本项目提供一种透明的方式，让开发者像以前一样使用导航器，同时，每个 push 进来的 VC 有自己独立的导航条。
  pod "RTRootNavigationController"
  
end

target '<Your Tests Target Name>' do
  # Swift测试框架（下面两个一起实用）
  # https://github.com/Quick/Quick
  pod 'Quick'
  # https://github.com/Quick/Nimble
  pod 'Nimble'
end

